<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context="hu.xmister.hermestool.OtherFragment"
    android:columnCount="2">

    <!-- TODO: Update blank fragment layout -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/mount_label"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbAutoMount"
        android:id="@+id/cbAutoMount"
        android:layout_column="0"
        android:layout_row="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/formatSD"
        android:id="@+id/btFormat"
        android:layout_column="0"
        android:layout_row="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mountSD"
        android:id="@+id/btMount"
        android:layout_column="0"
        android:layout_row="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sched_label"
        android:layout_column="0"
        android:layout_row="4"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sched"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flash_twrp"
        android:layout_column="0"
        android:layout_row="6"
        android:id="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_flash_recovery"
        android:layout_row="7"
        android:layout_column="0"
        android:text="@string/flash_twrp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/convert_backup"
        android:layout_row="8"
        android:layout_column="0"
        android:text="@string/convert_backup" />

</GridLayout>
