<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:columnCount="2"
    android:rowCount="7">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:text="@string/main_section_label"
        android:layout_column="0"
        android:layout_row="0"
        android:elevation="1dp"
        android:layout_marginBottom="10dp"
        android:layout_columnSpan="2">
        <requestFocus />
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlimited"
        android:id="@+id/maxFreq"
        android:layout_row="1"
        android:layout_column="0"
        android:nestedScrollingEnabled="false"
        android:layout_gravity="left" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/grCoreLimit"
        android:layout_column="0"
        android:layout_row="2"
        android:columnCount="2"
        android:layout_columnSpan="2">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_limitCore"
            android:id="@+id/cb_limitCore" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tMaxCores"
            android:layout_row="0"
            android:layout_column="1"
            android:maxLength="1"
            android:inputType="number"
            android:width="50dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/grGpuFreq"
        android:layout_column="0"
        android:layout_row="3"
        android:columnCount="2"
        android:layout_columnSpan="2" >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cbLimitGpuFreq"
            android:id="@+id/cbLimitGpuFreq" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bLimitGpuFreq"
            android:layout_column="1"
            android:layout_row="0" />

    </GridLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/touchboost"
        android:id="@+id/cbTouchBoost"
        android:layout_column="0"
        android:layout_row="4"
        android:elegantTextHeight="false"
        android:elevation="1dp"
        android:layout_marginBottom="10dp"
        android:layout_columnSpan="2"
        android:layout_marginTop="10dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="5"
        android:columnCount="4"
        android:rowCount="3"
        android:id="@+id/grTouch"
        android:useDefaultMargins="false"
        android:layout_rowWeight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="3"
            android:text="@string/def"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="3"
            android:text="1183MHz"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_row="1"
            android:layout_column="3"
            android:text="3"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/on_system"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/cores"
            android:id="@+id/textView2"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tCores"
            android:layout_row="1"
            android:layout_column="1"
            android:maxLength="1"
            android:width="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tbFrequency"
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tbFrequency"
            android:id="@+id/tFreq"
            android:layout_column="1"
            android:layout_row="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCore"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textFreq"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="5dp" />
    </GridLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:checkedButton="@+id/rb_slow"
        android:id="@+id/rg_profile"
        android:layout_gravity="top"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:id="@+id/textView9" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_gaming"
            android:id="@+id/rb_gaming" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_default"
            android:id="@+id/rb_default" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_slow"
            android:id="@+id/rb_slow" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rb_quick"
            android:id="@+id/rb_quick" />

    </RadioGroup>

</GridLayout>
</ScrollView>